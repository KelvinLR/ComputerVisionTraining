{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run MyProject",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/MyProject",
        "args": ["australia.jpg"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build",
        "environment": [],
        "externalConsole": true,
        "MIMode": "lldb",  // ou "gdb" se estiver no Linux
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb/lldb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  